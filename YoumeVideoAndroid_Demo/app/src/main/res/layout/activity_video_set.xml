<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:text="参数设置"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="162dp"
            android:layout_height="28dp"
            android:text="serverIP："
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_serverip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="0.0.0.0"
            android:inputType="text"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="162dp"
            android:layout_height="28dp"
            android:text="serverPort："
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_serverport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="0"
            android:inputType="number"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="162dp"
            android:layout_height="28dp"
            android:text="视频宽："
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_videoWidth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="240"
            android:inputType="number"/>

    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="162dp"
            android:layout_height="28dp"
            android:text="视频高："
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_videoHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="320"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewFps"
            android:layout_width="162dp"
            android:layout_height="28dp"
            android:text="视频帧率："
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_videoFps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="15"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="162dp"
            android:layout_height="28dp"
            android:text="视频码率：max"
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_maxBitRate"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="3000"
            android:inputType="number"/>

        <TextView
            android:id="@+id/textView41"
            android:layout_width="60dp"
            android:layout_height="28dp"
            android:text="min"
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_minBitRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="3000"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="162dp"
            android:layout_height="28dp"
            android:text="统计时间间隔："
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_reportInterval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="5000"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="162dp"
            android:layout_height="28dp"
            android:text="远端音量等级："
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_farendLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="10"
            android:inputType="number"/>
    </LinearLayout>

    <Switch
        android:id="@+id/switch_videoQuality"
        android:layout_width="274dp"
        android:layout_height="28dp"
        android:layout_weight="0.14"
        android:checked="true"
        android:text="人声增强"
        android:textAlignment="center"
        android:textSize="18sp" />

    <!--<Switch-->
        <!--android:id="@+id/switch_beautify"-->
        <!--android:layout_width="277dp"-->
        <!--android:layout_height="28dp"-->
        <!--android:layout_weight="0.09"-->
        <!--android:checked="false"-->
        <!--android:text="美颜"-->
        <!--android:textAlignment="center"-->
        <!--android:textSize="18sp" />-->

    <Switch
        android:id="@+id/switch_bHWEnable"
        android:layout_width="274dp"
        android:layout_height="28dp"
        android:visibility="gone"
        android:checked="true"
        android:text="硬编码"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_weight="0.14" />

    <Switch
        android:id="@+id/switch_tcp"
        android:layout_width="277dp"
        android:layout_height="28dp"
        android:layout_weight="0.09"
        android:checked="false"
        android:text="TCP传输"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Switch
        android:id="@+id/switch_landscape"
        android:layout_width="277dp"
        android:layout_height="28dp"
        android:layout_weight="0.09"
        android:checked="false"
        android:text="横屏"
        android:textAlignment="center"
        android:textSize="18sp" />
    <Switch
        android:id="@+id/switch_vbr"
        android:layout_width="277dp"
        android:layout_height="28dp"
        android:layout_weight="0.09"
        android:checked="false"
        android:text="VBR"
        android:textAlignment="center"
        android:textSize="18sp" />
    <Switch
        android:id="@+id/switch_testmode"
        android:layout_width="277dp"
        android:layout_height="28dp"
        android:layout_weight="0.09"
        android:checked="false"
        android:text="测试服"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onConfirmClick"
        android:text="确定" />


</LinearLayout>
